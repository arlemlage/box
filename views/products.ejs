<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>
    <!--*******************
    Preloader start
********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
    Preloader end
********************-->

    <!--**********************************
    Main wrapper start
***********************************-->
    <div id="main-wrapper">

        <!--**********************************
        Nav header start
    ***********************************-->
        <%- include('./partials/header_logo'); -%>

            <!--**********************************
        Nav header end
    ***********************************-->

            <!--**********************************
        Header start
    ***********************************-->
            <%- include('./partials/header',{titel: language.manage_product}); -%>

                <!--**********************************
        Header end ti-comment-alt
    ***********************************-->

                <!--**********************************
        Sidebar start
    ***********************************-->
                <%- include('./partials/sidebar'); -%>

                    <!--**********************************
        Sidebar end
    ***********************************-->

                    <div class="content-body">
                        <div class="container-fluid">
                            <!-- row -->
                            
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title col-6 "><%= language.all_products %></h4>
                                        <div class="card-title col-6 text-end">

                                            <a href="/products/view/add_products" class="btn btn-rounded btn-info text-white">
                                                <span><%= language.add_products %></span> 
                                                <span class="btn-icon-start text-info">
                                                    <i class="fa fa-plus color-info"></i>
                                                </span>
                                            </a>

                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-responsive-sm text-center">
                                                <thead>
                                                    <tr>

                                                        <th><%= language.image %> </th>
                                                        <th><%= language.name %> </th>
                                                        <th><%= language.sku %> </th>
                                                        <th><%= language.code %> </th>
                                                        <th><%= language.category %> </th>
                                                        <th><%= language.brands %> </th>
                                                        <th><%= language.stock %> </th>
                                                        <th><%= language.alert_qty %> </th>
                                                        <th><%= language.units %> </th>
                                                        <th><%= language.edit %> </th>
                                                        <th><%= language.barcode %> </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% alldata.forEach((alldata)=> { %>
                                                        <tr class="products_tbody">
                                                            <td class="p-0">
                                                                <img class="rounded-circle" width="75" height="60" src="/upload/<%= alldata.image %>" alt="image">
                                                                
                                                            </td>

                                                            <td> <%= alldata.name %> </td>

                                                            <td> <%= alldata.sku %> </td>
                                                            
                                                            <td> <%= alldata.product_code %> </td>

                                                            <td> <%= alldata.category %> </td>

                                                            <td> <%= alldata.brand %> </td>

                                                            <td> <%= alldata.stock %> </td>

                                                            <td> <%= alldata.alertquantity %> </td>

                                                            <td> <%= alldata.unit %> </td>
                                                            <td>
                                                                <a href="/products/view/<%= alldata._id %>" id="procatid" data-id="<%= alldata._id %>"
                                                                    class="btn btn-primary btn-sm ">
                                                                    <%= language.edit %> 
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <a href="/products/barcode/<%= alldata._id %>" id="barcode" data-id="<%= alldata._id %>"
                                                                    class="btn btn-warning btn-sm">
                                                                    <i class="feather icon-printer"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--**********************************
            Footer start
        ***********************************-->
                    <%- include('./partials/footer'); -%>

                        <!--**********************************
            Footer end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!-- start Toastr -->
    <%- include('./partials/toastr'); -%>
    <!-- End Toastr -->

    <!--**********************************
        Scripts
    ***********************************-->
   
    <%- include('./partials/script'); -%>

        <!--**********************************
        Scripts end
    ***********************************-->
</body>

</html>